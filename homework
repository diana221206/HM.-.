n = float(input('Введіть перше число: '))
m = float(input('Введіть друге число: '))

print(n + m, n - m, n * m, n / m if m != 0 else "Ділення на нуль!", sep='\n')
except ValueError:
print("Будь ласка, введіть коректні числові значення.")


name = input("Введіть своє ім'я: ").strip()
color = input('Введіть колір: ').strip()

if name and color:
    print(f'Привіт, {name}! Ваш улюблений колір - {color}.')
else:
    print("Будь ласка, введіть коректні дані.")


year = int(input('Введіть рік народження: '))
current_year = datetime.now().year
age = current_year - year


if age < 0:
    print("Рік народження не може бути більшим за поточний.")
else:
    print(f'Ваш вік: {age}.')
except ValueError:
print("Будь ласка, введіть коректний рік.")
